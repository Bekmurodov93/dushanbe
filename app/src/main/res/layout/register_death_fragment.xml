<?xml version="1.0" encoding="utf-8"?>
<layout tools:context=".screens.death.RegisterDeathFragment"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.example.patient.screens.death.RegisterDeathViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/bg_color">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:title=""
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_back_texted" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <ImageView
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/ic_newspaper"
                    tools:ignore="ContentDescription" />
            <TextView
                    android:id="@+id/mainDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    android:padding="10dp"
                    style="@style/blueRegular16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/news"
                    android:text="@string/death.title"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/next"
                app:layout_constraintTop_toBottomOf="@+id/headerWrapper">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/contentWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">
                <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="-8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/checkbox7"
                        style="@style/label13"/>
                <TextView
                        android:id="@+id/labelDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/death_filial"
                        style="@style/label13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox1" />
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deathRegionLayout"
                        style="@style/outlinedTextField"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelDate"
                        >
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathRegionFiled"
                            style="@style/digitRegular18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:paddingBottom="15dp"
                            android:maxLength="30"
                            android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:id="@+id/labelReason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/death_mother_reason"
                        style="@style/label13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deathRegionLayout" />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deathReasonLayout"
                        style="@style/outlinedTextField"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelReason">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathReason"
                            style="@style/digitRegular18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:paddingBottom="15dp"
                            android:maxLength="30"
                            android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                        android:id="@+id/checkbox2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="-8dp"
                        app:layout_constraintTop_toBottomOf="@+id/deathReasonLayout"
                        android:text="@string/checkbox8"
                        style="@style/label13"/>
                <TextView
                        android:id="@+id/labelDeathHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/haours_after_death"
                        style="@style/label13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/checkbox2" />
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deathHoursLayout"
                        style="@style/outlinedTextField"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelDeathHours"
                        >
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathHours"
                            style="@style/digitRegular18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:paddingBottom="15dp"
                            android:maxLength="30"
                            android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:id="@+id/labelDeathRegion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/death_filial"
                        style="@style/label13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deathHoursLayout" />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deathRegionLayout2"
                        style="@style/outlinedTextField"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelDeathRegion2">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathRegion2"
                            style="@style/digitRegular18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:paddingBottom="15dp"
                            android:maxLength="30"
                            android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:id="@+id/labelDeathReason2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/death_reason"
                        style="@style/label13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deathRegionLayout2" />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deathReasonLayout2"
                        style="@style/outlinedTextField"
                        app:hintEnabled="false"
                        app:endIconMode="clear_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/labelDeathReason2">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deathReason2"
                            style="@style/digitRegular18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input"
                            android:paddingBottom="15dp"
                            android:maxLength="30"
                            android:text="" />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


        <Button
                android:id="@+id/next"
                style="@style/stateEnabledButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/save"
                android:layout_marginBottom="15dp"
                android:enabled="true"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
