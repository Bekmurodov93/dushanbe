<?xml version="1.0" encoding="utf-8"?>
<layout tools:context=".screens.register.RegisterSecondFragment"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="registerViewModel"
                type="com.example.patient.screens.register.RegisterSecondViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/bg_color">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@string/register_title"
                app:navigationIcon="@drawable/ic_back_texted" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/indicatorWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <ImageView
                    android:id="@+id/indicatorFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_disable"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:id="@+id/indicatorSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_rectangle_active"
                    app:layout_constraintLeft_toRightOf="@+id/indicatorFirst"
                    app:layout_constraintRight_toLeftOf="@+id/indicatorThird"
                    app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                    android:id="@+id/indicatorThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rectangle_disable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/indicatorWrapper">
            <ImageView
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/ic_newspaper"/>

            <TextView
                    style="@style/blueRegular16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/news.info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/news"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/next"
                app:layout_constraintTop_toBottomOf="@+id/headerWrapper">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/labelFio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/fio.pregnant"
                    style="@style/label13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fioLayout"
                    style="@style/outlinedTextField"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/labelFio"
                    >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fioField"
                        style="@style/digitRegular18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:paddingBottom="15dp"
                        android:maxLength="30"
                        android:text="@={registerViewModel.fio}" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/labelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/birthday"
                    style="@style/label13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fioLayout" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/date"
                    style="@style/outlinedTextField"
                    app:hintEnabled="false"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/labelDate"
                    >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateField"
                        style="@style/digitRegular18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:paddingBottom="15dp"
                        android:maxLength="30"
                        android:text="@={registerViewModel.dateOfBirth}" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                    android:id="@+id/labelSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/serial"
                    style="@style/label13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date" />
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/serialLayout"
                    style="@style/outlinedTextField"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/labelSerial"
                    >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/serialField"
                        style="@style/digitRegular18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:paddingBottom="15dp"
                        android:maxLength="30"
                        android:inputType="text"
                        android:text="@={registerViewModel.number}" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                    android:id="@+id/labelAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/address"
                    style="@style/label13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/serialLayout" />
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addressLayout"
                    style="@style/outlinedTextField"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/labelAddress"
                    >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addressField"
                        style="@style/digitRegular18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:paddingBottom="15dp"
                        android:maxLength="30"
                        android:text="@={registerViewModel.mainAddress}" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                    android:id="@+id/labelPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/phone_number"
                    style="@style/label13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressLayout" />
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneLayout"
                    style="@style/outlinedTextField"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/labelPhone"
                    >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneField"
                        style="@style/digitRegular18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:paddingBottom="15dp"
                        android:maxLength="30"
                        android:inputType="phone"
                        android:text="@={registerViewModel.phone}" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/labelPhoneRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/phone_number_relative"
                    style="@style/label13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phoneLayout" />
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneRelativeLayout"
                    style="@style/outlinedTextField"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/labelPhoneRelative"
                    >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneRelativeField"
                        style="@style/digitRegular18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input"
                        android:paddingBottom="15dp"
                        android:maxLength="30"
                        android:inputType="phone"
                        android:text="@={registerViewModel.extraPhone}" />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
                android:id="@+id/next"
                style="@style/stateEnabledButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/next"
                android:layout_marginBottom="15dp"
                android:enabled="true"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
