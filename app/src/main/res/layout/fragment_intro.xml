<?xml version="1.0" encoding="utf-8"?>
<layout tools:context=".screens.welcome.IntroFragment"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пропустить"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pagerWrapper"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/skip"
                app:layout_constraintBottom_toTopOf="@+id/bottomContent">
            <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/intro_pager"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/into_tab_layout"/>
            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/into_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabBackground="@drawable/tab_pager_selector"
                    app:tabGravity="center"
                    app:tabPaddingStart="@dimen/tab_padding_start"
                    app:tabPaddingEnd="@dimen/tab_padding_end"
                    app:tabIndicatorHeight="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/pagerWrapper"
                app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                    android:id="@+id/mainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/headlineBlackRegular24"
                    android:text="Donec massa volutpat congue arcu vitae "
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:id="@+id/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/blackRegular14"
                    android:textColor="@color/lightGrey"
                    android:textAlignment="center"
                    android:text="Luctus vel nunc tempor etiam nascetur
                    potenti erat eu nisi vitae"
                    app:layout_constraintTop_toBottomOf="@+id/mainText"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <Button
                    android:id="@+id/next"
                    style="@style/stateEnabledButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/next"
                    android:background="@drawable/btn_back"
                    app:layout_constraintTop_toBottomOf="@+id/subText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
