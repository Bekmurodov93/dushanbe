<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.scanPassport.ScanPassportFragment">
    <data>
        <variable
                name="scanPassportModel"
                type="com.example.patient.screens.scanPassport.ScanPassportViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffff">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#ffff"
                android:layout_marginTop="20dp"
                app:navigationIcon="@drawable/ic_back"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iden.send.doc"
                    android:layout_marginEnd="15dp"
                    style="@style/headlineBlackRegular16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.Toolbar>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.3">

                    <!--Step 1 -->
                    <TextView
                            android:id="@+id/step1_number_tv"
                            style="@style/online_ident_step_num_tv"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="32dp"
                            android:text="@string/one"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/step1_description"
                            style="@style/online_ident_step_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:text="@string/iden.step1.text"
                            app:layout_constraintBottom_toBottomOf="@+id/step1_number_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/step1_number_tv"
                            app:layout_constraintTop_toTopOf="@+id/step1_number_tv"
                            app:layout_constraintVertical_bias="1.0" />

                    <TextView
                            android:id="@+id/step1_show_example"
                            style="@style/online_ident_show_example_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="@string/iden.show.example"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/step1_description"
                            app:layout_constraintTop_toBottomOf="@+id/step1_description" />

                    <LinearLayout
                            android:id="@+id/take_img1"
                            android:layout_width="145dp"
                            android:layout_height="44dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/online_identification_button_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/step1_description"
                            app:layout_constraintTop_toBottomOf="@+id/step1_show_example">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/camera_white" />

                        <TextView
                                style="@style/online_ident_button_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="9dp"
                                android:layout_marginEnd="10dp"
                                android:lines="1"
                                android:text="@string/make.photo" />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/image_preview1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="25dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/step1_description"
                            app:layout_constraintTop_toBottomOf="@+id/take_img1">

                        <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/image_preview1_imageView"
                                android:layout_width="120dp"
                                android:layout_height="80dp"
                                android:background="@drawable/take_img_background"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/online_ident_img_preview" />

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/take_img1_again"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="110dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/circle"
                                app:civ_border_color="#EEEEEE"
                                app:civ_border_width="1dp"
                                android:elevation="1dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/image_preview1_imageView"
                                app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                                android:layout_width="22dp"
                                android:layout_height="18dp"
                                android:clickable="false"
                                android:src="@drawable/camera_green"
                                android:elevation="1dp"
                                app:layout_constraintBottom_toBottomOf="@+id/take_img1_again"
                                app:layout_constraintEnd_toEndOf="@+id/take_img1_again"
                                app:layout_constraintStart_toStartOf="@+id/take_img1_again"
                                app:layout_constraintTop_toTopOf="@+id/take_img1_again" />

                        <ProgressBar
                                android:id="@+id/preview_progress_bar1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/progressbar_background"
                                android:theme="@style/progressbar"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/image_preview1_imageView"
                                app:layout_constraintEnd_toEndOf="@+id/image_preview1_imageView"
                                app:layout_constraintStart_toStartOf="@+id/image_preview1_imageView"
                                app:layout_constraintTop_toTopOf="@+id/image_preview1_imageView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                            android:id="@+id/view10"
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"
                            android:layout_marginTop="24dp"
                            android:background="#F7F8F9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_preview1" />

                    <!--Step 2 -->

                    <TextView
                            android:id="@+id/step2_number_tv"
                            style="@style/online_ident_step_num_tv"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="24dp"
                            android:text="@string/two"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view10" />

                    <TextView
                            android:id="@+id/step2_description"
                            style="@style/online_ident_step_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:text="@string/iden.step2.text"
                            app:layout_constraintBottom_toBottomOf="@+id/step2_number_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/step2_number_tv"
                            app:layout_constraintTop_toTopOf="@+id/step2_number_tv" />

                    <TextView
                            android:id="@+id/step2_show_example"
                            style="@style/online_ident_show_example_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="@string/iden.show.example"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/step2_description"
                            app:layout_constraintTop_toBottomOf="@+id/step2_description" />

                    <LinearLayout
                            android:id="@+id/take_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/online_identification_button_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/step2_description"
                            app:layout_constraintTop_toBottomOf="@+id/step2_show_example">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/camera_white" />

                        <TextView
                                style="@style/online_ident_button_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="9dp"
                                android:layout_marginEnd="10dp"
                                android:lines="1"
                                android:text="@string/make.photo" />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/image_preview2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="25dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/step2_description"
                            app:layout_constraintTop_toBottomOf="@+id/take_img2">

                        <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/image_preview2_imageView"
                                android:layout_width="120dp"
                                android:layout_height="80dp"
                                android:background="@drawable/take_img_background"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_max="120dp"
                                app:shapeAppearanceOverlay="@style/online_ident_img_preview" />

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/take_img2_again"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="110dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/circle"
                                android:elevation="1dp"
                                app:civ_border_color="#EEEEEE"
                                app:civ_border_width="1dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                                android:layout_width="22dp"
                                android:layout_height="18dp"
                                android:clickable="false"
                                android:src="@drawable/camera_green"
                                android:elevation="1dp"
                                app:layout_constraintBottom_toBottomOf="@+id/take_img2_again"
                                app:layout_constraintEnd_toEndOf="@+id/take_img2_again"
                                app:layout_constraintStart_toStartOf="@+id/take_img2_again"
                                app:layout_constraintTop_toTopOf="@+id/take_img2_again" />

                        <ProgressBar
                                android:id="@+id/preview_progress_bar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/progressbar_background"
                                android:theme="@style/progressbar"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/image_preview2_imageView"
                                app:layout_constraintEnd_toEndOf="@+id/image_preview2_imageView"
                                app:layout_constraintStart_toStartOf="@+id/image_preview2_imageView"
                                app:layout_constraintTop_toTopOf="@+id/image_preview2_imageView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                            android:id="@+id/view11"
                            android:layout_width="wrap_content"
                            android:layout_height="8dp"
                            android:layout_marginTop="24dp"
                            android:background="#F7F8F9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_preview2" />


                    <!--Step 3 -->

                    <TextView
                            android:id="@+id/step3_number_tv"
                            style="@style/online_ident_step_num_tv"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="24dp"
                            android:text="@string/three"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/view11" />

                    <TextView
                            android:id="@+id/step3_description"
                            style="@style/online_ident_step_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:text="@string/iden.step3.text"
                            app:layout_constraintBottom_toBottomOf="@+id/step3_number_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/step3_number_tv"
                            app:layout_constraintTop_toTopOf="@+id/step3_number_tv" />

                    <TextView
                            android:id="@+id/step3_show_example"
                            style="@style/online_ident_show_example_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="@string/iden.show.example"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="@+id/step3_description"
                            app:layout_constraintTop_toBottomOf="@+id/step3_description" />

                    <LinearLayout
                            android:id="@+id/take_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/online_identification_button_background"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/step3_description"
                            app:layout_constraintTop_toBottomOf="@+id/step3_show_example"
                            app:layout_constraintVertical_bias="0.0">

                        <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/camera_white" />

                        <TextView
                                style="@style/online_ident_button_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="9dp"
                                android:layout_marginEnd="10dp"
                                android:lines="1"
                                android:text="@string/make.photo" />


                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/image_preview3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="25dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/step3_description"
                            app:layout_constraintTop_toBottomOf="@+id/take_img3">

                        <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/image_preview3_imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:background="@drawable/take_img_background"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_max="120dp"
                                app:shapeAppearanceOverlay="@style/online_ident_img_preview" />

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/take_img3_again"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="110dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/circle"
                                android:elevation="1dp"
                                app:civ_border_color="#EEEEEE"
                                app:civ_border_width="1dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/image_preview3_imageView"
                                app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                                android:layout_width="22dp"
                                android:layout_height="18dp"
                                android:clickable="false"
                                android:src="@drawable/camera_green"
                                android:elevation="1dp"
                                app:layout_constraintBottom_toBottomOf="@+id/take_img3_again"
                                app:layout_constraintEnd_toEndOf="@+id/take_img3_again"
                                app:layout_constraintStart_toStartOf="@+id/take_img3_again"
                                app:layout_constraintTop_toTopOf="@+id/take_img3_again" />

                        <ProgressBar
                                android:id="@+id/preview_progress_bar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/progressbar_background"
                                android:theme="@style/progressbar"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="@+id/image_preview3_imageView"
                                app:layout_constraintEnd_toEndOf="@+id/image_preview3_imageView"
                                app:layout_constraintStart_toStartOf="@+id/image_preview3_imageView"
                                app:layout_constraintTop_toTopOf="@+id/image_preview3_imageView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button
                            android:id="@+id/send_btn"
                            style="@style/online_ident_button_text"
                            android:layout_width="316dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/online_identification_button_background"
                            android:enabled="true"
                            android:text="@string/iden.button.send"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_preview3" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
