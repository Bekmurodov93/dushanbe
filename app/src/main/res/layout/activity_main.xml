<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activityView"
            tools:context=".screens.MainActivity"
            android:background="@drawable/bg_app"
            android:paddingTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logoWrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/langSelector"
                app:layout_constraintTop_toTopOf="parent">
            <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/logoMainText"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:id="@+id/logoMainText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    style="@style/blueRegular16"
                    android:text="@string/organ_dushanbe"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintRight_toRightOf="parent"/>
            <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/light_blue_600"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/logoMainText"
                    app:layout_constraintLeft_toLeftOf="@+id/logoMainText"
                    app:layout_constraintRight_toRightOf="@+id/logoMainText"/>
            <TextView
                    android:id="@+id/logoSubText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    style="@style/blueRegular16"
                    android:text="@string/invest_dushanbe"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    app:layout_constraintLeft_toRightOf="@+id/logo"
                    app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/langSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/logoWrapper"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ruWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <ImageView
                        android:id="@+id/ruFlag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ru_flag"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:id="@+id/rus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/russian"
                        android:padding="4dp"
                        style="@style/blackRegular14"
                        app:layout_constraintLeft_toRightOf="@+id/ruFlag"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/engWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ruWrapper">
                <ImageView
                        android:id="@+id/engFlag"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/usd_flag"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:id="@+id/eng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:padding="4dp"
                        style="@style/blackRegular14"
                        app:layout_constraintLeft_toRightOf="@+id/engFlag"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.fragment.app.FragmentContainerView
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:defaultNavHost="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logoWrapper"
                app:layout_constraintBottom_toBottomOf="parent"
                app:navGraph="@navigation/nav_graph" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


