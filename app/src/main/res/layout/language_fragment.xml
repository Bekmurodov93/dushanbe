<?xml version="1.0" encoding="utf-8"?>
<layout tools:context=".screens.language.LanguageFragment"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fon_startpng2">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/logoWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/logoMainText"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        android:id="@+id/logoMainText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        style="@style/headlineWhiteRegular16"
                        android:layout_marginLeft="20dp"
                        android:text="@string/organ_dushanbe"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/logo" />
                <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/logoMainText"
                        app:layout_constraintLeft_toLeftOf="@+id/logoMainText"
                        app:layout_constraintRight_toRightOf="@+id/logoMainText"/>
                <TextView
                        android:id="@+id/logoSubText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        style="@style/headlineWhiteRegular16"
                        android:text="@string/invest_dushanbe"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        app:layout_constraintLeft_toRightOf="@+id/logo"
                        app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/langSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/logoWrapper"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="30dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ruWrapper"
                        android:layout_width="280dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_back"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-17dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                                android:id="@+id/ruFlag"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ru_flag"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/rus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/russian_lang"
                                android:layout_marginLeft="15dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/ruFlag"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/engWrapper"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn_back"
                        android:padding="5dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ruWrapper">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                                android:id="@+id/engFlag"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/usd_flag"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/eng"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/english_lang"
                                android:layout_marginLeft="15dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/engFlag"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

