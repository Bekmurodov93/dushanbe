<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.login.LoginFragment">
    <data>
        <variable
                name="loginModel"
                type="com.example.patient.screens.login.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/bg_color">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ic_group"
                app:layout_constraintBottom_toTopOf="@+id/wrapper"/>
        <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:padding="5dp"
                style="@style/headlineBlackRegular16"
                app:layout_constraintBottom_toTopOf="@+id/wrapper"
                app:layout_constraintLeft_toLeftOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/email.placeholder"
                    app:placeholderTextAppearance="@style/digitRegularPlaceholder18"
                    app:hintTextAppearance="@style/inputLabelRegular16"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/outlinedTextLoginField">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        style="@style/digitRegularLogin18"
                        android:paddingTop="12dp"
                        android:hint="@string/email"
                        android:text="@={loginModel.email}"
                        android:maxLength="30"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:placeholderText="@string/password.placeholder"
                    app:placeholderTextAppearance="@style/digitRegularPlaceholder18"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    app:hintTextAppearance="@style/inputLabelRegular16"
                    app:layout_constraintTop_toBottomOf="@+id/emailAddress"
                    style="@style/outlinedTextLoginField"
                    app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        style="@style/digitRegularLogin18"
                        android:hint="@string/password"
                        android:paddingTop="12dp"
                        android:text="@={loginModel.password}"
                        android:maxLength="15"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/forgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot.password"
                    style="@style/blackRegular16"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/password"
                    app:layout_constraintRight_toRightOf="parent"/>

            <Button
                    android:id="@+id/login"
                    style="@style/stateEnabledButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/login.btn.txt"
                    android:layout_marginTop="15dp"
                    android:enabled="true"
                    app:layout_constraintTop_toBottomOf="@+id/forgotPassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
