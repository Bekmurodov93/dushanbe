<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.home.HomeFragment">
    <data>
        <variable
                name="homeModel"
                type="com.example.patient.screens.home.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="#E5E5E5">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_logo"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@+id/first"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logoTextWrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                app:layout_constraintLeft_toRightOf="@+id/logo"
                app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="@+id/logo"
                app:layout_constraintBottom_toBottomOf="@+id/logo">
            <TextView
                    android:id="@+id/mainText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/headlineBlackRegular16"
                    android:text="Центр здоровья"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                    android:id="@+id/subText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="5dp"
                    android:text="Файзобод"
                    style="@style/headlineBlackRegular13"
                    app:layout_constraintTop_toBottomOf="@+id/mainText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/logo">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                <ImageView
                        android:id="@+id/addIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_add_patient"/>
                <TextView
                        android:id="@+id/addText"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        style="@style/headlineBlackRegular16"
                        android:text="Постановка беременной на учет (1-й дородовый визит)"
                        app:layout_constraintLeft_toRightOf="@+id/addIcon"
                        app:layout_constraintRight_toLeftOf="@+id/arrowIcon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/arrowIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_chevron_right_3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/first" >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                <ImageView
                        android:id="@+id/searchIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_search"/>
                <TextView
                        android:id="@+id/searchText"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        style="@style/headlineBlackRegular16"
                        android:text="Ввод данных повторных пациентов"
                        app:layout_constraintLeft_toRightOf="@+id/searchIcon"
                        app:layout_constraintRight_toLeftOf="@+id/arrowSearchIcon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/arrowSearchIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_chevron_right_3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/second" >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                <ImageView
                        android:id="@+id/syncIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_search"/>
                <TextView
                        android:id="@+id/syncText"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        style="@style/headlineBlackRegular16"
                        android:text="Синхронизация"
                        app:layout_constraintLeft_toRightOf="@+id/syncIcon"
                        app:layout_constraintRight_toLeftOf="@+id/arrowSyncIcon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/arrowSyncIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_chevron_right_3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/fouth"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:elevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/third" >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">
                <ImageView
                        android:id="@+id/helpIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_search"/>
                <TextView
                        android:id="@+id/helpText"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        style="@style/headlineBlackRegular16"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:text="Помощь"
                        app:layout_constraintLeft_toRightOf="@+id/helpIcon"
                        app:layout_constraintRight_toLeftOf="@+id/arrowHelpIcon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                        android:id="@+id/arrowHelpIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_chevron_right_3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>