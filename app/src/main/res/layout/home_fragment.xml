<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.home.HomeFragment">
    <data>
        <variable
                name="homeModel"
                type="com.example.consultantalif.screens.home.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify.client"
                    style="@style/headlineGreenRegular24"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/wrapper"
                    android:layout_marginBottom="30dp"
                    tools:ignore="HardcodedText" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35">
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                app:endIconMode="clear_text"
                app:placeholderText="@string/phone.placeholder"
                app:placeholderTextAppearance="@style/digitRegularPlaceholder18"
                app:hintTextAppearance="@style/inputLabelRegular16"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/outlinedTextField">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneField"
                    style="@style/digitRegular18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:text="@={homeModel.phone}"
                    android:maxLength="20"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/otpFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/otp"
                app:placeholderText="@string/otp.placeholder"
                app:placeholderTextAppearance="@style/digitRegularPlaceholder18"
                app:hintTextAppearance="@style/inputLabelRegular16"
                android:layout_marginTop="15dp"
                app:endIconMode="custom"
                app:layout_constraintTop_toBottomOf="@+id/phoneFieldLayout"
                style="@style/outlinedTextField">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otpField"
                    style="@style/digitRegular18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="@={homeModel.otp}"
                    android:maxLength="6"/>

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
                android:id="@+id/sendOtp"
                style="@style/outlinedBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/send.otp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>