<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".screens.home.HomeFragment">
    <data>
        <variable
                name="homeModel"
                type="com.example.dushanbe.screens.home.HomeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="2"
                    android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnWeight="0.5"
                        android:layout_marginRight="5dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="12dp"
                        android:shadowRadius="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_back"
                            android:padding="10dp">
                        <ImageView
                                android:id="@+id/videoLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/videoText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/videos"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/videoLogo"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnWeight="0.5"
                        android:layout_marginLeft="5dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="12dp"
                        android:shadowRadius="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_back"
                            android:padding="10dp">
                        <ImageView
                                android:id="@+id/projectLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/projectText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/project"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/projectLogo"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnWeight="0.5"
                        android:layout_marginRight="5dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="12dp"
                        android:shadowRadius="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_back"
                            android:padding="10dp">
                        <ImageView
                                android:id="@+id/presentLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/presentText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/presentation"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/presentLogo"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnWeight="0.5"
                        android:layout_marginLeft="5dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="12dp"
                        android:shadowRadius="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_back"
                            android:padding="10dp">
                        <ImageView
                                android:id="@+id/kodeksLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/kodeksText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kodeks"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/kodeksLogo"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnWeight="0.5"
                        android:layout_marginRight="5dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="12dp"
                        android:shadowRadius="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_back"
                            android:padding="10dp">
                        <ImageView
                                android:id="@+id/dushanbeLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/dushanbeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dushanbe"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/dushanbeLogo"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnWeight="0.5"
                        android:layout_marginLeft="5dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="12dp"
                        android:shadowRadius="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_back"
                            android:padding="10dp">
                        <ImageView
                                android:id="@+id/tajikistanLogo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        <TextView
                                android:id="@+id/tajikistanText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tajikistan"
                                android:textAllCaps="true"
                                android:layout_marginLeft="20dp"
                                style="@style/headlineWhiteRegular16"
                                app:layout_constraintLeft_toRightOf="@+id/tajikistanLogo"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>